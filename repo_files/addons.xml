<addons>
<addon id="plugin.video.robiptv"
       name="Rob IPTV"
       version="1.1"
       provider-name="sClarke">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.requests" />
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Rob IPTV</summary>
    <language>en</language>
    <description lang="en">Rob IPTV Official Addon - Supplier of Great Quality and Stable Streams</description>
     <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.program.robwizard" name="Rob Wizard" version="1.0" provider-name="sClarke">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">[COLOR ffff0000]Rob Wizard[/COLOR]</summary>
    <description lang="en">Rob Wizard, Bringing you Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
